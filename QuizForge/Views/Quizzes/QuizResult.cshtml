@model QuizResultViewModel

@{
    ViewData["Title"] = "Quiz results";
    double percentage = Math.Round(Model.Points / Model.Quiz.QuizPoints,2)*100;
}
@section head{
    <style>
    .skill {
    margin-bottom: 35px;
    position: relative;
    overflow-x:hidden;
    border: 2px solid black;
    border-radius: 10px;
    }
    
    .skill > p {
    font-size: 18px;
    font-weight: 700;
    color: #1a1716;
    margin: 0;
    }
    .skill:before {
    width: 100%;
    height: 10px;
    content: "";
    display: block;
    position: absolute;
    background: #959595;
    bottom: 0;
    }
    .skill-bar {
    width: 100%;
    height: 10px;
    background:#f4392f;
    display: block;
    position: relative;
    } 
    .skill-bar span {
    position: absolute;
    border-top: 5px solid #f4392f;
    top: -30px;
    padding: 0;
    font-size: 18px;
    padding: 3px 0;
    font-weight: 500;
    }
    .skill-bar {
    position: relative;
    } 
    .skill1 .skill-count1 {
    right: 0;
    }
    .skill1 {
    width: @percentage%;
    }
    .card-main{
        height: 100vh;
    }

    html{
            overflow: hidden;
    }
    body {
        background-image: url("/img/default/space_background.jpg");
        background-attachment: fixed;
        background-size: cover;
    }

    footer{
        padding: 9px 10px 6px;
        font-weight: bold;
        float: none;
        clear: both;
        width: 100%;
        height: 40px;
    }
    </style>
}

<div class="bg-image">
    <div class="row d-flex justify-content-center align-items-center card-main">
        <div class="card col-lg-7 col-m-8 col-sm-10" >
            <h2 class="card-header">Quiz result</h2>
            <div class="card-body">
        
                <p class="card-text">Your quiz score: @Model.Points/@Model.Quiz.QuizPoints</p>
                <div class="skill">
                    <br />
                    <div class="skill-bar skill1">
                     <span class="skill-count1">@percentage%</span>
                    </div>
                </div>
                    <a class="btn btn-info" asp-action="Index" asp-controller="Quizzes">Return to the quizzes list</a>
            </div> 
        </div>
    </div>
</div>